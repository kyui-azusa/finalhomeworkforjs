<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head", {title: "收藏"}) %>
  <style>
    .title {
      float: left;
      font-size: 16px;
      margin-left: 20px;
      margin: 0;
      margin-top: 5px;
      border-right: 2px solid #ccc;
      padding-right: 20px;
      /* margin-right: 30px; */
    }
    .display {
      margin-bottom: 40px;
    }
    .list {
      float: left;
      list-style: none;
      padding: 0;
      /* border: 1px solid; */
      height: 30px;
      overflow: hidden;
      margin: 0;
      margin-left: 30px;
      width: 200px;
    }

    .list li {
      float: left;
      height: 30px;
      line-height: 30px;
      width: 100%;
    }
  </style>
  <script src="https://cdn.jsdelivr.net/npm/echarts/dist/echarts.min.js"></script>
  <body>
    <div class="body-container">
      <%- include("partials/header", {current: "Archive"}) %>
      <div id="layout">
        <!-- 主体 -->
        <div id="content-container">
          <% if (posts && posts.length > 0) { %>
          <div class="display">
            <h2 class="title">随便看看</h2>
            <ul class="list">
              <% slugs.map((slug)=>{%>
              <li><a href="/note/<%=slug%>"> <%=slug%> </a></li>
              <%}) %>
            </ul>
            <div
              id="tag-pie"
              style="width: 400px; height: 400px; margin: 0 auto "
            ></div>
          </div>
          <%- include("partials/postsInfo", {posts: posts}) %> <% } else { %>
          <div class="display">暂无收藏</div>
          <%- include("partials/carousel") %> <% } %>
        </div>
        <%- include("partials/sidebar") %>
      </div>
    </div>
    <script>
      // 初始化: 一开始做什么
      (function () {
        var list = document.querySelector(".list");
        // 1. 将第一个元素克隆到最后
        function cloneFirstItem() {
          var firstItem = list.children[0];
          var newItem = firstItem.cloneNode(true);
          list.appendChild(newItem);
        }
        cloneFirstItem();
        // 向下滚动
        var duration = 2000;
        var curIndex = 0;
        var itemHeight = 30;
        function moveNext() {
          var origin = curIndex * itemHeight;
          curIndex++;
          var target = curIndex * itemHeight;
          // list.scrollTop=target;
          var totalDuration = 500;
          var duration = 10;
          var times = totalDuration / duration;
          var dis = (target - origin) / times;
          var timer = setInterval(function () {
            origin += dis;
            list.scrollTop = origin;
            if (origin >= target) {
              clearInterval(timer);
              if (curIndex === list.children.length - 1) {
                list.scrollTop = 0;
                curIndex = 0;
              }
            }
          }, duration);
        }
        setInterval(moveNext, duration);
      })();
      // 交互: 用户操作之后做什么
    </script>

    <script>
      const tagData = <%- JSON.stringify(tagData) %>
      const chart = echarts.init(document.getElementById("tag-pie"));

      chart.setOption({
        title: {
          text: '收藏标签分布',
          left: 'center'
        },
        tooltip: {
          trigger: 'item',
          formatter: '{b}: {c} ({d}%)'
        },
        series: [
          {
            name: '标签',
            type: 'pie',
            radius: '50%',
            data: tagData,
            emphasis: {
              itemStyle: {
                shadowBlur: 10,
                shadowOffsetX: 0,
                shadowColor: 'rgba(0, 0, 0, 0.5)'
              }
            }
          }
        ]
      });
    </script>
  </body>
</html>
